<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:id="@+id/notirelative_item"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatarnot"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        app:shapeAppearanceOverlay="@style/roundedImage"
        android:layout_marginEnd="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notinameuser"
        android:layout_toEndOf="@id/avatarnot"
        android:textColor="@color/black"
        android:textSize="25sp"
        tools:text = "Name"
        />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/notiaddtoffriend"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"

        android:layout_toStartOf="@id/notideltoffriend"
        android:clickable="true"
        app:shapeAppearanceOverlay="@style/roundedImage"
        app:srcCompat="@drawable/addbutton"
        tools:ignore="SpeakableTextPresentCheck" />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/notideltoffriend"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        app:shapeAppearanceOverlay="@style/roundedImage"
        app:srcCompat="@drawable/close_dark"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/typemassage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@id/notinameuser"
        android:textSize="18sp"
        android:layout_toEndOf="@id/avatarnot"
        android:text="Add to friend" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/avatarnot"
        android:layout_marginTop="10dp"
        android:background="#D1D1D1"
        />


</RelativeLayout>